import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n = sc.nextInt();
        int m = sc.nextInt();
        int[] a = new int[n];

        int lastChild = 1;
        int maxTurns = 0;

        for (int i = 0; i < n; i++) {
            a[i] = sc.nextInt();
            // number of turns this child needs
            int turns = (a[i] + m - 1) / m; // ceiling division
            if (turns >= maxTurns) {
                maxTurns = turns;
                lastChild = i + 1; // store child's index (1-based)
            }
        }

        System.out.println(lastChild);
    }
}
