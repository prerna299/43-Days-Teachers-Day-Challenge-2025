import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String n = sc.next();

        int length = n.length();
        int index = 0;

        // Count all lucky numbers with smaller length
        for (int i = 1; i < length; i++) {
            index += (1 << i); // 2^i lucky numbers of length i
        }

        // Convert current number into binary-like value
        for (int i = 0; i < length; i++) {
            if (n.charAt(i) == '7') {
                index += (1 << (length - i - 1));
            }
        }

        // 1-based index
        System.out.println(index + 1);
    }
}
