import java.util.*;

public class ArrivalOfTheGeneral {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int n = sc.nextInt();
        int[] h = new int[n];
        
        for (int i = 0; i < n; i++) {
            h[i] = sc.nextInt();
        }
        
        // Find index of first occurrence of max height
        int maxIndex = 0;
        for (int i = 1; i < n; i++) {
            if (h[i] > h[maxIndex]) {
                maxIndex = i;
            }
        }
        
        // Find index of last occurrence of min height
        int minIndex = 0;
        for (int i = 1; i < n; i++) {
            if (h[i] <= h[minIndex]) {
                minIndex = i;
            }
        }
        
        int swaps = maxIndex + (n - 1 - minIndex);
        
        // If minIndex comes before maxIndex, one swap is saved
        if (minIndex < maxIndex) {
            swaps -= 1;
        }
        
        System.out.println(swaps);
    }
}
