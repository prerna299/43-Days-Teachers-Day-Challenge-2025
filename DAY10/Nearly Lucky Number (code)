import java.util.Scanner;

public class NearlyLuckyNumber {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String n = sc.nextLine(); // read number as string

        int luckyCount = 0;

        for (int i = 0; i < n.length(); i++) {
            char c = n.charAt(i);
            if (c == '4' || c == '7') {
                luckyCount++;
            }
        }

        // Check if luckyCount is a lucky number itself
        if (isLuckyNumber(luckyCount)) {
            System.out.println("YES");
        } else {
            System.out.println("NO");
        }
    }

    // Helper method to check if a number is a lucky number
    public static boolean isLuckyNumber(int num) {
        String s = Integer.toString(num);
        for (int i = 0; i < s.length(); i++) {
            if (s.charAt(i) != '4' && s.charAt(i) != '7') {
                return false;
            }
        }
        return true;
    }
}
